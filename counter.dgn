select "std"
select "types"
select "files"
END = 100
prices = [1.23,5.00]
zips = ['2333','4993']
run = true
isDone = false
while isDone == false {
    showln "choose from memu"
    show "\n1. getinput \n2. readfile\n3. quit\n\nenter a choice"
    userChoice = readln()
    if(userChoice == 1) 
    {
        recordInput()
    }
    if(userChoice == 2) 
    {
        readData()
    }
