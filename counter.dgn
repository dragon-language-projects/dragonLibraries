func recordInput() {

while run == true {
show "Enter a zip"
userZip = readln()
i = 0
price = 0.00

while  i < length(zips) {

if(zips[i] == userZip) {
    echo("delivered at", zips[i], "for",prices[i])
    price=prices[i]
    break
}
else {
    echo(userZip,"is not a valid zip")
}
i++;

}
test = fopen("deliveries.txt","w+")
writeLine(test,userZip + ": $" +  price)
echo("$",price)
fclose(test)
show "do you want to try another zipcode"
ask = readln()
if(ask == "no"){
run = false
}
}
}
